#!/usr/bin/env ruby
require_relative '../lib/fundry/cli'
require 'fundry/web'

bin     = Fundry::Cli.bin
option  = (ARGV.shift || 'help').strip
usage   = %Q{
  usage: #{bin} [-h|--help]

  Commands are:
    -h, --help  This help message.
    -r  --root  Fundry root path.
    -b  --bin   Fundry bin path.
}.strip

case option
  when /^\-{0,2}h(?:elp)?$/, nil then puts usage
  when '-b', '--bin'             then puts File.expand_path(File.dirname(__FILE__))
  when '-r', '--root'            then puts File.expand_path(Fundry.root)
  else warn("#{bin}: '#{option}' is not an #{bin} option. See '#{bin} --help'.") && exit(-1)
end

